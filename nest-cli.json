{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false,
    "flat": false
  },
  "compilerOptions": {
    "webpack": false,
    "deleteOutDir": true,
    "assets": [
      {
        "include": "i18n/**/*", "watchAssets": true
      }
    ]
  }
}
